pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // git 'https://github.com/GhanaATS/eureka.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t eureka .'
                }
            }
        }
        
         stage('Build Docker container') {
            steps {
                script {
                    sh 'docker run -d -p 8761:8761 eureka '
                }
            }
        }
    }
}
