pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/GhanaATS/eureka.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t eureka .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove the existing container if it exists
                    sh '''
                    docker ps -a | grep eureka_container && docker stop eureka_container && docker rm eureka_container || true
                    docker run -d -p 8761:8761 --name eureka_container eureka
                    '''
                }
            }
        }
    }
}
