pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/GhanaATS/eureka.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker --version'  // Check if Docker is installed
                    sh 'docker build -t eureka .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker rm -f eureka_container || true'  // Remove any existing container
                    sh 'docker run -d -p 8761:8761 --name eureka_container eureka'
                    sh 'docker ps -a | grep eureka_container'  // Verify if the container is running
                }
            }
        }
    }
}
